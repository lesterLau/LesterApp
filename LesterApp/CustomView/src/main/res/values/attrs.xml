<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- circular cover view -->
    <declare-styleable name="CircularCoverView">
        <attr name="left_top_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="cover_color" format="color" />
    </declare-styleable>
    <declare-styleable name="AspectRatio">
        <attr name="lockWidth" format="boolean" />
        <attr name="widthWeight" format="float" />
        <attr name="heightWeight" format="float" />
    </declare-styleable>
    <declare-styleable name="ChangeColorTextView">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
    </declare-styleable>
    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>
    <!-- 流式布局  -->
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="HorizontalListView">
        <attr name="android_divider" format="boolean" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="android_listSelector" format="reference" />
        <attr name="android_drawSelectorOnTop" format="boolean" />
        <attr name="android_choiceMode" format="integer" />
    </declare-styleable>
    <!-- 倒计时控件自定义属性 -->
    <declare-styleable name="CountDownView">
        <attr name="countDownTime" format="float" />
        <attr name="countDownFormat" format="string" />
    </declare-styleable>
    <declare-styleable name="EmojiTextView">
        <attr name="emojiSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="FixedRatioView">
        <!-- 控件宽度比例-->
        <attr name="mWidthRatio" format="integer" />
        <!-- 控件高度比例-->
        <attr name="mHeightRatio" format="integer" />
    </declare-styleable>
    <declare-styleable name="ImgBlurImageView">
        <attr name="blur" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="PointerView">
        <!--指示图标。一个有"android:state_selected"属性的StateListDrawable-->
        <attr name="pointerDrawable" format="reference" />
        <!--图标的间距-->
        <attr name="spacing" format="dimension">
            <!--在图标之外将其向内挤压-->
            <enum name="fill_center" value="-1" />
            <!--在图标之间将其向外撑开-->
            <enum name="fill_spacing" value="-2" />
        </attr>
        <!--指示图标数量-->
        <attr name="pointerCount" format="integer" />
        <!--当前选择的图标位置-->
        <attr name="currentPosition" format="integer" />
    </declare-styleable>
    <declare-styleable name="SelectableRoundedImageView">
        <attr name="sriv_left_top_corner_radius" format="dimension" />
        <attr name="sriv_right_top_corner_radius" format="dimension" />
        <attr name="sriv_left_bottom_corner_radius" format="dimension" />
        <attr name="sriv_right_bottom_corner_radius" format="dimension" />
        <attr name="sriv_border_width" format="dimension" />
        <attr name="sriv_border_color" format="color" />
        <attr name="sriv_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>
    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" format="integer"/>

        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>

        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>

        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>

        <attr name="progress_text_offset" format="dimension"/>

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>
    <!--自定义属性的使用-->
    <declare-styleable name="HorizontalProgressBarWithProgress">
        <attr name="h_progress_unreach_color" format="color"></attr>
        <attr name="h_progress_unreach_height" format="dimension"></attr>
        <attr name="h_progress_reach_color" format="color"></attr>
        <attr name="h_progress_reach_height" format="dimension"></attr>
        <attr name="h_progress_text_color" format="color"></attr>
        <attr name="h_progress_text_size" format="dimension"></attr>
        <attr name="h_progress_text_offset" format="dimension"></attr>
    </declare-styleable>
</resources>